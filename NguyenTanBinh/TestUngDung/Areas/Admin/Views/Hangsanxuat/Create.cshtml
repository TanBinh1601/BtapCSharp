@model ModelEF.Model.HangSX

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-cube">&nbsp; Thêm mới</i>
}

@using (Html.BeginForm("Create", "Hangsanxuat", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">
            <div class="col-md-6">
                @Html.ActionLink("Quay lại", "Index", "Hangsanxuat", new { @class = "btn btn-secondary" })
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.HangSX1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.HangSX1, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập Tên nhà sản xuất" } })
                @Html.ValidationMessageFor(model => model.HangSX1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </div>
    </div>
}