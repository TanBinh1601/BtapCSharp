@model ModelEF.Model.HeDH

@{
    ViewBag.Title = "Cập nhật";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    <i class="fa fa-microchip">&nbsp; Cập nhật</i>
}

@using (Html.BeginForm("Edit", "Hedieuhanh", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="row">
        <div class="col-md-6">
            @Html.ActionLink("Quay lại", "Index", "Hedieuhanh", new { @class = "btn btn-secondary" })
        </div>
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IdHdh)

    <div class="form-group">
        @Html.LabelFor(model => model.HeDieuHanh, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.HeDieuHanh, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập Tên hệ điều hành" } })
            @Html.ValidationMessageFor(model => model.HeDieuHanh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-danger" />
        </div>
    </div>
</div>
}